<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="/css/index.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/javascript/homePage.js"></script>
    <title><%=title%></title>
</head>
<body>
    <!-- Barra estática alrededor de la página -->
    <div class="outer-bar">
        <div class="container">
            <!-- Zona de visualización del Pokémon seleccionado -->
            <%pokemones.forEach(function (pokemon){ %>
            <div class="pokemon-display">
                <div class="pokemon-name"><%= pokemons.name %></div>
                <div class="image-stats-container">
                    <div class="image-container">
                        <div class="red-background"></div>
                        <script>getImage("<%=pokemon.name%>")</script>
                        <img id="imgOf<%=pokemon.name%>" src=""/>
                    <!--<img src="bulbasaur.png" alt="Bulbasaur">-->    
                    </div>
                    
                    <div class="base-stats">
                        <h3>Base Stats</h3>
                        <div class="stat">
                            <span>HP:</span>
                            <span>120/300</span>
                        </div>
                        <div class="stat">
                            <span>Atk:</span>
                            <span>150/300</span>
                        </div>
                        <div class="stat">
                            <span>Def:</span>
                            <span>180/300</span>
                        </div>
                        <div class="stat">
                            <span>Spd:</span>
                            <span>200/300</span>
                        </div>
                    </div>
                </div>
                <p>Type: <%= pokemons[0].type %></p>
            </div>
            <%})%>

            <!-- Barra lateral con los nombres de los Pokémon -->
            <div class="sidebar">
                <ul id="pokemonList">
                    <% pokemons.forEach(pokemon => { %>
                        <li data-id="<%= pokemon.id %>">
                            <%= pokemon.id %>. <%= pokemon.name %>
                        </li>
                    <% }) %>
                </ul>
            </div>
        </div>
    </div>
