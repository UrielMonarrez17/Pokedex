<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="/css/style.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/javascript/homePage.js"></script>
    <title><%=title%></title>
</head>
<body >
    <div class="outer-bar">
        <div class="container">

            <div class="pokemon-display">
                <div class="pokemon-name"><%=name %></div>
                <div class="general_container">
                    <div class="image-container">
                        <div class="red-background">
                            <img  src="<%=image%>"/> 
                        </div>
                        
                    </div>
                    
                   
                <div class="stats_base">
                <div class="base-stats">
                    <h6>Base Stats</h6>
                    <div class="stat">
                        <span>Altura:<%=height%></span>
                    </div>
                    <div class="stat">
                        <span>Exp:<%=experience%></span>
                    </div>
                    <div class="stat">
                        <span>Peso:<%=weight%></span>
                    </div>
                    <div class="stat">
                        <span>ID:<%=id%></span>
                    </div>
                </div>
                <div  class="type-container">
                <p>Types: </p>
                <%types.forEach(function(item){%>
                    <div class="<%=item.type.name%>">
                    <h6 ><%=item.type.name%></h6>
                </div>
                    <%})%>
                </div>
            </div>
        </div>
            </div>
            

            <!-- Barra lateral con los nombres de los PokÃ©mon -->
             <div class="sidebar-container">
            <div class="sidebar">
                <ul id="pokemonList">
                    <% list.forEach(pokemon => { %>
                        <li data-id="<%= pokemon.name %>" onclick='Search("<%= pokemon.name%>")'>
                            <%= pokemon.name %>
                        </li>
                    <% }) %>
                </ul>
                
                <img src="/images/derecha_gris.png" class="flecha_izq" onclick='Anterior("<%=name%>")'/>
                <img src="/images/derecha_gris.png" class="flecha_der" onclick='Siguiente("<%=name%>")'/>
            </div>
        </div>
    </div>
</div>
   


      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>
</body>
</html>
